<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_margin="0.25dp"
    android:layout_height="100dp"
    android:id="@+id/curriculum_item_layout"
    >
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/child_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_xml_main_page"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorGray"
        app:cardBackgroundColor="@color/colorWhite">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:text="1"
                android:gravity="left"
                android:id="@+id/curriculum_item"
                android:layout_marginLeft="2dp"
                android:textColor="@color/colorGray1"
                android:textSize="16sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/curriculum_item_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorGray1"
                android:textSize="14sp"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/curriculum_item_teacher"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorGray1"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/curriculum_item_location"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorGray1"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.25"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/curriculum_item_time"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/colorGray1"
                android:textSize="14sp"
                android:visibility="gone"
                />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>>

</LinearLayout>