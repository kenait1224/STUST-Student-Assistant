<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:background="@drawable/background_xml_course_detail"
           android:id="@+id/course_detail_title_layout"
           android:padding="15dp"
           >

           <ImageView
               android:id="@+id/course_detail_arrow"
               android:layout_width="0dp"
               android:layout_height="30dp"
               android:layout_weight="0.2"
               android:src="@drawable/ic_course_detail_list_reduce"
               android:layout_gravity="center_vertical"
               android:scaleType="fitCenter"
               />
           <TextView
               android:id="@+id/course_detail_title"
               android:layout_width="0dp"
               android:layout_height="50dp"
               android:layout_weight="0.8"
               android:text="Menu Title"
               android:gravity="center_vertical"
               android:textColor="@color/colorBlack"
               android:textSize="20sp"
               android:layout_marginLeft="15dp"
               />
       </LinearLayout>

</FrameLayout>